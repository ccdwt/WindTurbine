#!/bin/sh
ENTRY_NAME=$1
ENTRY=$2
COMMENT="##### Autogenerated cron entry for $ENTRY_NAME"
FLAG=0
truncate --size 0 crontab.tmp

crontab -l | while read -r line; do
	if [ "$line" = "$COMMENT" ];then
		FLAG=2
	fi
#	echo "FLAG= $FLAG and line = $line"
	if [ $FLAG == 0 ]; then
		echo "$line" >> crontab.tmp
	else 
		FLAG=$(expr $FLAG - 1 )
	fi
done 
echo "$COMMENT" >> crontab.tmp
echo "$ENTRY"   >> crontab.tmp
crontab crontab.tmp
rm crontab.tmp


