#!/bin/bash
# start power logging

DIR="/usr/src/WindTurbine"
EXEC="$DIR/bin/rowland_power_log"

function clean(){
for PID in `/usr/bin/pgrep rowland_power`; do
	kill $PID
done
}

#function check(){
#	PIDS=`/usr/bin/pgrep rowland_power_log`
#	if [ `/bin/echo $PIDS | /usr/bin/wc -l` != "1" ]; then 
#		return 1
#	fi
#	return 0	
#
#}

if [ "$1" == "start" ]; then
	clean
	$EXEC &> $DIR/logs/power_rowland_error.log &
elif [ "$1" == "stop" ]; then
	#/bin/kill $(cat $DIR/pids/power_rowland.pid)
	clean
fi
